<div class="container">
<h2>All the restaurants</h2>
  <div>
    <%= link_to "Create a new restaurant!", new_restaurant_path, class: "btn btn-sm btn-primary" %>
  </div>
  <div class="card">
    <% @restaurants.each do |restaurant| %>
      <h3> <%= restaurant.name  %> </h3>
      <p> <%= restaurant.category.upcase %> </p>
      <p><%= restaurant.address %></p>
      <%= link_to "details", restaurant_path(restaurant.id), class: "btn btn-success" %>
    <% end %>
  </div>
</div>
