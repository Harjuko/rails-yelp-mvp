<div class="container">
  <h2>Restaurant Details</h2>
    <div class="card">
    <h3> <%= @restaurant.name %> </h3>
    <p><%= @restaurant.address %></p>
    <% reviews_array = [] %>
    <% @restaurant.reviews.each do |review| %>
      <div class="card-body">
        <ul class="list-group">
          <li class="list-group-item">
            <%= review.content %>
            <% review.rating.times do  %>
             <span class="glyphicon glyphicon-star"></span>
            <% end %>
            <% (5-review.rating).times do %>
              <span class="glyphicon glyphicon-star-empty"></span>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div>
    <div class="card-body">
    <% reviews_array << review.rating %>
    <% end %>

    <% if reviews_array.length != 0 %>
      <h6>average rating</h6>
      <% stars = reviews_array.sum/reviews_array.length %>
      <% stars.times do  %>
       <span class="glyphicon glyphicon-star"></span>
      <% end %>
      <% (5-stars).times do %>
        <span class="glyphicon glyphicon-star-empty"></span>
      <% end %>
    <% else %>
    <p> no reviews yet</p style="italic">
    <% end %>
  </div>

  <%= link_to "Back to main page", restaurants_path, class: "btn btn-danger" %>
  <%= link_to "Add review for #{@restaurant.name}", new_restaurant_review_path(@restaurant.id), class: "btn btn-success" %>
</div>
